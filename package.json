{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/withastro/compiler.git"
  },
  "scripts": {
    "build:napi": "pnpm --filter ./crates/astro_napi run build-dev",
    "build:compiler": "pnpm --filter @astrojs/compiler run build",
    "build:all": "pnpm run build:napi && pnpm run build:compiler",
    "check": "biome check",
    "ci": "biome ci --diagnostic-level=warn",
    "check:write": "biome check --write",
    "prerelease": "pnpm run build:compiler",
    "release": "changeset publish",
    "test": "node --import tsx --test 'packages/compiler/test/**/*.ts'",
    "test:ci": "pnpm run test"
  },
  "packageManager": "pnpm@10.22.0",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "1.8.1",
    "@changesets/cli": "^2.25.0",
    "acorn": "^8.15.0",
    "sass": "^1.55.0",
    "tsx": "^4.16.2",
    "typescript": "~5.5.3"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  }
}
